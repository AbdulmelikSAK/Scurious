
 <div class="row justify-content-center form-page">
    <div class="col-md-8">
      <h1>Your application</h1>

      <%= simple_form_for [@project, @candidate] do |f| %>
        <div class="form-inputs">
          <%= f.input :message, as: :text %>
          <%= f.submit "Send your application", class: 'btn btn-primary btn-block btn-large' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="bottom-page text-center">
  <%= link_to 'Back to homepage', root_path, class: 'btn btn-menu' %>
</div>
